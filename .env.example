# Copy this file to .env and fill in your actual values

# ==============================================
# üîë API KEYS (Required)
# ==============================================

# Groq API Key for audio transcription and ATC analysis
GROQ_API_KEY=your_groq_api_key_here

# FlightRadar24 API Key for live aircraft data (optional - fallback data available)
NEXT_PUBLIC_FLIGHTRADAR24_API_KEY=your_flightradar24_api_key_here

# OpenAIP API Key for airport/airspace data (optional)
NEXT_PUBLIC_OPENAIP_KEY=your_openaip_key_here

# ==============================================
# üéß AUDIO PROCESSING
# ==============================================

# LiveATC Audio Source (default: KSFO Tower)
LIVEATC_URL=https://d.liveatc.net/ksfo_twr

# Audio processing settings
CHUNK_DURATION=5
SAMPLE_RATE=16000

# ==============================================
# üåê SERVER CONFIGURATION
# ==============================================

# WebSocket Server Port for real-time audio streaming
WEBSOCKET_PORT=8765

# Next.js development server port
PORT=3000

# ==============================================
# üêõ DEBUGGING & LOGGING
# ==============================================

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable development mode features
NODE_ENV=development

